<div class="text-center"> <%= form_for @article do |f|%>
  <div class="form-group">
    <h2><%= f.label :article, "Title" %></h2>
  </div>
  <div class="form-group">
    <%= f.text_field :title, size: "25" %>
  </div>
  <div class="form-group">
    <h2><%= f.label :content, "" %></h2>
  </div>
  <div class="form-group">
    <%= f.text_area :content, size: "60x12" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-success" %>
  <% end %>
</div>
